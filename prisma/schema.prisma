generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Grids {
  id      Int       @id @default(autoincrement())
  name    String
  cost    Int
  size    Int
  first   Int?
  second  Int?
  third   Int?
  final   Int?
  token   String    @unique
  inverse Boolean   @default(false)
  game_id String    @db.VarChar
  squares Squares[]
}

model Users {
  id         Int       @id @default(autoincrement())
  name       String
  admin      Boolean   @default(false)
  phone      String    @unique
  short_code Int       @unique
  squares    Squares[]
}

model Squares {
  id      Int    @id @default(autoincrement())
  user_id Int
  grid_id Int
  status  String @default("pending")
  index   Int
  grids   Grids  @relation(fields: [grid_id], references: [id])
  users   Users  @relation(fields: [user_id], references: [id])
}

